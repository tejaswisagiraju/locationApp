

<style>
  #sign-up-form {


    padding-top: 40px;
  }

  #hello {

  
    padding-bottom: 25px;
    text-align: center;
  }


</style>


<div class="container" id="sign-up-form">

<div class="container" id="hello">
          <h1><small> Sign up here! </small></h1>
      </div>


<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>




      <div class="form-group">
        <%= f.label :first_name, "First name:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :first_name,required: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Last name:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :last_name,required: true, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :email, "email:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :email,required: true, class: "form-control" %>
        </div>
    </div>

        <div class="form-group">
        <%= f.label :password, "password:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.password_field :password,required: true, class: "form-control" %>
        </div>
    </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "password confirmation:", class: "col-md-4 control-label", id: "password" %>
        <div class="col-md-5">
          <%= f.password_field :password_confirmation,required: true, class: "form-control",id: "confirm_password" %>
        </div>
    </div>

      <div class="form-group">
        <div class="col-md-4 control-label"></div>
         <div class="col-md-5">
           <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
         </div>
         </div>
      </div>

   
 <% end %>
</div>

<script type="text/javascript">
var password = document.getElementById("password"),
 confirm_password = document.getElementById("confirm_password");

function validatePassword(){
  if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match");
  } else {
    confirm_password.setCustomValidity('');
  }
}

// password.onchange = validatePassword;
// confirm_password.onkeyup = validatePassword;
</script>
