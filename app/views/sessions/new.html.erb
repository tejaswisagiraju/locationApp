
<style>


#sign-in-form {

	padding-top: 40px;

}



  #hello {

  
    padding-bottom: 25px;
    text-align: center;
  }

</style>



 <div class="container" id="sign-in-form">

  <div class="container" id="hello1">
          <h1><small> Login here! </small></h1>
      </div>
<%= form_for :user, url:"/sessions",method:"post",:html => {:class => "form-horizontal center"} do |f| %>
    

    <div class="form-group">
        <%= f.label :email, "email:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :email, class: "form-control" %>
        </div>
    </div>

        <div class="form-group">
        <%= f.label :password, "password:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.password_field :password, class: "form-control" %>
        </div>
    </div>

     

      <div class="form-group">
        <div class="col-md-4 control-label"></div>
         <div class="col-md-5">
           <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
         </div>
         </div>
      </div>

   
 <% end %>
</div>